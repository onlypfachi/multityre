---
const offers = [
    {
        image: "616.jpeg",
        author: "Windforce",
        price: "45",
        quote: "Quality tyres at competitive prices. MultiTyre offers multiple brands without compromising on safety and performance.",
    },
    {
        image: "926.jpeg",
        author: "Kapsen",
        price: "50",
        quote: "Looking for reliable tyres? We stock a wide range of sizes and brands to keep you safe on Zimbabwe's roads.",
    },
    {
        image: "636.png",
        author: "Tracmax",
        price: "55",
        quote: "Premium brands also available on inquiry: Continental, Bridgestone, Michelin, Pirelli and more.",
    },
];
---

<section class="py-12">
    <div class="mx-auto max-w-screen-xl px-4">
        <h1
            class="yellowText text-4xl sm:text-5xl italic uppercase text-center"
        >
            Top Offers
        </h1>

        <div class="mt-8 grid grid-cols-1 md:grid-cols-3 gap-6">
            {
                offers.map((profile) => (
                    <div>
                        <img
                            src={"/images/" + profile.image}
                            alt="Top_offer"
                            class="object-cover w-full h-56 sm:h-64"
                        />
                        <div class="yellowBG p-6 sm:p-8">
                            <p class="pb-4 font-bold">{profile.quote}</p>
                            <small class="font-medium">{profile.author}</small>
                            <p class="pt-4 font-bold">
                                Prices from $ {profile.price}
                            </p>
                        </div>
                    </div>
                ))
            }
        </div>

        <div class="mt-6 text-center">
            <button class="yellowBG px-6 py-3 text-black font-bold uppercase">
                View more offers..
            </button>
        </div>
    </div>
</section>
